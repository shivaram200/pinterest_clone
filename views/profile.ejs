<% include ./partials/header.ejs %>

    <div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
        <form id="formUpload" hidden action="/uploaddp" method="post" enctype="multipart/form-data">
            <input type="file" name="dp">
        </form>
        <div class="prof-details flex flex-col items-center mt-20 ">
            <div class="relative">
                <span id="uploadIcon"
                    class="absolute bottom-0 right-0 w-8 h-8 rounded-full bg-zinc-200 flex items-center justify-center">
                    <i class="text-zinc-800 ri-pencil-fill"></i>
                </span>
                <div class="w-40 h-40 rounded-full bg-zinc-200 overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImg %>" alt="">
                </div>
            </div>
            <h1 class="text-sm font-semibold mt-5">@<%= user.username %>
            </h1>
            <a href="/edit" class="bg-zinc-600 px-8 mt-2 py-2 text-sm  rounded-full">edit</a>
            <a href="/uploadpost" class="bg-red-800 px-7 py-2 mt-2 rounded-lg">Add post</a>
        </div>
        <div class="cards px-10 flex flex-wrap gap-10 mt-10 ">
            <div class="card" id="postCard">
                <div class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= user?.posts[0]?.image %>" alt="">
                </div>
                <h5 class="text-xl font-semibold">
                    <%=user?.posts[0]?.title%>
                </h5>
                <h3 class="text-sm font-medium opacity-60">
                    <%= user.posts.length %>
                </h3>
                <a hidden id="showposts" href="/show/posts"></a>
            </div>





        </div>
    </div>

    <script>
        document.querySelector("#uploadIcon").addEventListener("click", function () {
            document.querySelector("#formUpload input").click();
        })
        document.querySelector("#formUpload input").addEventListener("change", function () {
            document.querySelector("#formUpload").submit();
        })

        document.querySelector("#postCard").addEventListener("click", function () {
            document.querySelector("#showposts").click();
        })
    </script>

    <% include ./partials/footer.ejs %>