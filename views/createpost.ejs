<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen bg-zinc-800 text-white px-10 py-8">

        <div>
            <h1 class="text-2xl font-semibold">Create post</h1>
            <hr class=" opacity-10 mt-2">
            <div>
                <form action="/createpost" method="post" enctype="multipart/form-data">
                    <input class="block w-1/3 mt-2" type="file" name="post">
                    <input
                        class="block w-1/3 mt-2 text-black outline outline-4 hover:border-red-500 focus:outline-sky-500 border-2 rounded-md px-3 py-2"
                        type="text" name="title" placeholder="Title">
                    <textarea
                        class="block w-1/3 mt-2 text-black border-2 outline outline-4 hover:border-red-500 focus:outline-sky-500 px-3 py-2 rounded-md h-60"
                        name="desc" placeholder="Description" rows="10"></textarea>
                    <input type="submit" value="Create Post"
                        class="block w-1/3 mt-2 rounded-md hover:bg-red-900 px-3 py-2 bg-red-700">
                </form>
            </div>
        </div>

    </div>

    <% include ./partials/footer.ejs %>